<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_intro"
    tools:context=".fragmentos.MagnetometroFragment">

    <!-- RecyclerView para la lista de contactos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewMagnetometro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_intro"/>

    <!-- Vista que se superpone para aplicar el color discreto -->
    <View
        android:id="@+id/listaMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_intro" />
    <TextView
        android:id="@+id/textViewMagnetometro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAGNETOMETRO"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="32sp"/>



</FrameLayout>
